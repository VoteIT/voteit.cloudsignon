<tal:main xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="voteit.cloudsignon">
<p tal:condition="'facebook' in providers">
<form action="/facebook_login" method="post">
	<input type="hidden" name="scope" value="email,offline_access" />
	<input tal:condition="came_from" type="hidden" name="came_from" value="${came_from}" />
    <button name="login" type="submit" class="buttonize" value="login">
        <span i18n:translate="">Login with Facebook</span>
	</button>
</form>
</p>
<p tal:condition="'twitter' in providers">
<form action="/twitter_login" method="post">
	<input tal:condition="came_from" type="hidden" name="came_from" value="${came_from}" />
	<button name="login" type="submit" class="buttonize" value="login">
        <span i18n:translate="">Login with Twitter</span>
	</button>
</form>
</p>
</tal:main>